{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".", // This must be specified if "paths" is.
    "paths": {
      "@view/*": ["./src/view/*"],
      "@compoment/*": ["./src/compoment/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}